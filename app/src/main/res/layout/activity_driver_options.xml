<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <Button
        android:id="@+id/speeding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Speeding"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_purple"/>

    <Button
        android:id="@+id/swerving"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Swerving"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_blue_dark"
        />

    <Button
        android:id="@+id/tailgaiting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Tailgating"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_green_dark"
        />

    <Button
        android:id="@+id/pedestrian"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Did Not Yield to Pedestrian"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_orange_light"
        />

    <Button
        android:id="@+id/distracted"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Distracted"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_orange_dark"
        />

    <Button
        android:id="@+id/signal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="Not using turn signal"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_red_dark"
        />

</LinearLayout>